@model List<ProjetoPROG.Models.Cadastro>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastros</h2>

@if (@Model.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr><th>Cadastro</th></tr>
        </thead>
        <tbody>
            @foreach (var cadastro in Model)
            {
                <tr><td>@Html.ActionLink(@cadastro.Nome, "Details", new { cadastro.ID })</td></tr>
            }
        </tbody>
    </table>
}
